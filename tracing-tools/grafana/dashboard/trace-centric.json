{
  "uid": "trace-centric",
  "title": "Trace Centric Observability",
  "tags": ["tracing", "tempo", "otel"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "type": "tempo-traceql",
      "title": "Trace List (All)",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 8 },
      "targets": [
        {
          "query": "{}",
          "limit": 50
        }
      ]
    },
    {
      "id": 2,
      "type": "tempo-traceql",
      "title": "Slow Traces (>1s)",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 7 },
      "targets": [
        {
          "query": "{ duration > 1s }",
          "limit": 20
        }
      ]
    },
    {
      "id": 3,
      "type": "tempo-traceql",
      "title": "Error Traces",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 7 },
      "targets": [
        {
          "query": "{ status = error }",
          "limit": 20
        }
      ]
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Request Latency (p95)",
      "gridPos": { "x": 0, "y": 15, "w": 12, "h": 7 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(http_server_duration_bucket[5m])))",
          "refId": "A"
        }
      ],
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Error Rate",
      "gridPos": { "x": 12, "y": 15, "w": 12, "h": 7 },
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_total{status=~\"5..\"}[5m]))",
          "refId": "A"
        }
      ],
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      }
    }
  ]
}
